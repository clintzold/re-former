<%= form_with model: @user, url: "/users", method: :post do |form| %>
  <% if form.object.errors.any? %>
      <p style="color:red"><%= form.object.errors.full_messages.first %></p>
  <% end %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username, value: "Your username here..." %>
  </div>
  <div>
    <%= form.label :email %> <br>
    <%= form.email_field :email, value: "example@example.com" %>
  </div>
  <div>
    <%= form.label :password %> <br>
    <%= form.password_field :password %>
  </div>
  <%= form.submit %>
<% end %>
